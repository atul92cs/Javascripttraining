<div class="main-body">
    <div class="form-section">
         <form action="/car/add" method="post">
          <div class="form-group">
              <input type="text" name="name" id="name" placeholder="Name" class="form-control">
          </div>
          <div class="form-group">
              <input type="text" name="model" id="model" placeholder="Model" class="form-control">
          </div>
          <div class="form-group">
              <select name="company" id="company" class="form-control form-control-sm">
                  <option value="0" class="form-control">--SELECT--</option>
                  {{#each companies}}
                   <option value="{{this.id}}" class="form-control">{{this.Name}}</option>
                  {{/each}}
              </select>
          </div>
          <div class="form-group text-center">
              <button type="submit" class="btn btn-primary">Add</button>
          </div>
         </form>
    </div>
    <div class="data-section">
       <table class="table">
           <thead>
               <th scope="col">Id</th>
               <th scope="col">Name</th>
               <th scope="col">Model</th>
               <th scope="col">Company</th>
           </thead>
           <tbody>
               {{#each cars}}
               <tr>
                   <td>{{this.id}}</td>
                   <td>{{this.Name}}</td>
                   <td>{{this.Model}}</td>
                   <td>{{this.Company}}</td>
               </tr>
               {{/each}}
           </tbody>
       </table>
    </div>
</div>